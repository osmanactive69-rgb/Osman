    <script>
        // ARKA PLAN KALPLER
        const canvas = document.getElementById('bg-canvas');
        const ctx = canvas.getContext('2d');
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
        let hearts = [];

        function createHeart() {
            return {
                x: Math.random() * canvas.width,
                y: canvas.height + 10,
                size: Math.random() * 15 + 5,
                speed: Math.random() * 2 + 1,
                opacity: Math.random() * 0.5 + 0.2
            };
        }

        function drawHearts() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            ctx.fillStyle = '#ff4d6d';
            hearts.forEach((h, i) => {
                ctx.globalAlpha = h.opacity;
                ctx.beginPath();
                ctx.arc(h.x, h.y, h.size, 0, Math.PI * 2);
                ctx.fill();
                h.y -= h.speed;
                if (h.y < -20) hearts[i] = createHeart();
            });
            requestAnimationFrame(drawHearts);
        }

        for(let i=0; i<50; i++) hearts.push(createHeart());
        drawHearts();

        // ÅÄ°FRE VE BAÅLATMA
        function startStory() {
            const pass = document.getElementById('pass').value;
            if(pass !== "") { // BurayÄ± istersen Ã¶zel bir tarihle (Ã¶rn: 14.02.2024) deÄŸiÅŸtirebilirsin
                document.getElementById('entrance').style.transform = "translateY(-100%)";
                document.getElementById('main-content').style.display = "block";
                document.getElementById('loveSong').play();
                initReveal();
                startTypewriter();
            } else {
                alert("LÃ¼tfen o Ã¶zel gÃ¼nÃ¼ buraya yaz sevgilim...");
            }
        }

        // DAKTYLO
        const msg = "Seninle geÃ§en her dakika, Ã¶mrÃ¼me Ã¶mÃ¼r katÄ±yor. FotoÄŸraflara sÄ±ÄŸdÄ±ramadÄ±ÄŸÄ±mÄ±z o kadar Ã§ok anÄ±mÄ±z var ki... GÃ¶zlerine baktÄ±ÄŸÄ±mda gÃ¶rdÃ¼ÄŸÃ¼m o gelecek, hayatÄ±mda sahip olduÄŸum en bÃ¼yÃ¼k hazine. Seni her ÅŸeyden Ã§ok seviyorum.";
        let charIndex = 0;
        function startTypewriter() {
            if (charIndex < msg.length) {
                document.getElementById("typewriter").innerHTML += msg.charAt(charIndex);
                charIndex++;
                setTimeout(startTypewriter, 50);
            }
        }

        // SCROLL REVEAL
        function initReveal() {
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) entry.target.classList.add('active');
                });
            }, { threshold: 0.1 });

            document.querySelectorAll('.reveal').forEach(section => observer.observe(section));
        }

        // MÃœZÄ°K
        function toggleMusic() {
            const song = document.getElementById('loveSong');
            song.paused ? song.play() : song.pause();
        }

        // SON SÃœRPRÄ°Z
        function finalSurprise() {
            document.getElementById('final-text').style.display = 'block';
            for(let i=0; i<50; i++) {
                setTimeout(() => {
                    const heart = document.createElement('div');
                    heart.innerHTML = 'â¤ï¸';
                    heart.style.position = 'fixed';
                    heart.style.left = Math.random() * 100 + 'vw';
                    heart.style.top = '100vh';
                    heart.style.fontSize = Math.random() * 30 + 20 + 'px';
                    heart.style.transition = '4s';
                    heart.style.zIndex = '1000';
                    document.body.appendChild(heart);
                    setTimeout(() => {
                        heart.style.transform = `translateY(-120vh) rotate(${Math.random() * 360}deg)`;
                        heart.style.opacity = '0';
                    }, 100);
                    setTimeout(() => heart.remove(), 4000);
                }, i * 100);
            }
        }
    </script>
